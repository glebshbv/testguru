<%= form_with model: @user, local: true, data: { turbo: false } do |form| %>
  <%= render 'error', resource: @user %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :user_name %>
  </p>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :user_email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: :user_password %>
  </p>
  <p>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p>
  <p><%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition duration-300" %></p>
<% end %>
