<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col items-start">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " rounded-xl border-gray-300 shadow-sm" %>
    </div>

    <div class="flex flex-col items-start">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "rounded-xl border-gray-300 shadow-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex flex-col items-start">
        <%= f.check_box :remember_me, class: "block text-sm font-medium text-gray-700" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="flex items-center justify-start">
      <%= f.submit "Log in", class: "p-2 bg-blue-600 text-xs text-white rounded-xl" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
