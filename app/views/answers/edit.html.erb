<div class="flex flex-col max-w-md mx-auto w-full">
  <h1 class="my-4 text-2xl font-semibold text-gray-700">New Question</h1>
  <%= @answer.body %>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <%= render 'form' %>
  </div>
  <%= button_to 'Back to Question', question_path(@answer.question), class: "mt-2 p-2 bg-green-600 text-xs text-white rounded-xl", method: :get %>
</div>
