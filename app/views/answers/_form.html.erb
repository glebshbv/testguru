<%= form_with model: [@question, @answer].compact , local: true, class: "p-6" do |form| %>
  <%= render 'shared/error', object: [@question, @answers].compact %>
  <div class="space-y-4">
    <div class="flex flex-col gap-1 items-start">
      <%= form.label :answer, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, id: :correct, rows: 7, cols: 60, class: "w-full rounded-xl border-gray-300 shadow-sm" %>
    </div>

    <div class="flex flex-col gap-1 items-start">
      <%= form.label :correct, class: "block text-sm font-medium text-gray-700" %>
      <%= form.check_box :correct, id: :correct %>
    </div>
    
    <div class="flex items-center justify-start">
      <%= form.submit class: "p-2 bg-blue-600 text-xs text-white rounded-xl" %>
    </div>
  </div>
<% end %>
