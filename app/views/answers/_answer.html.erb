<li class="flex flex-row gap-3">
  <%= answer.body %>
  <%= link_to 'View Answer', answer_path(answer), class:"underline text-green-800" %>
  <%= link_to 'Edit Answer', edit_answer_path(answer), class:"underline" %>
  <%= button_to 'Delete Answer', answer_path(answer), method: :delete, class:"underline text-red-600", form: { data: { turbo_confirm: 'Are you sure you want to delete this answer?' } } %>

</li>
