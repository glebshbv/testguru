<%= form_with url: login_path, local: true, method: :post, data: { turbo: false } do |form| %>

<% if flash[:alert] %>
  <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-4">
    <P class="block sm:inline"><%= flash[:alert] %></P>
  </div>
<% end %>


  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: :password %>
  </p>

  <p><%= form.submit 'Enter' %></p>
<% end %>