<div class="flex flex-col items-start justify-start gap-y-3 p-2 border rounded-lg shadow bg-slate-100">
  <h3 class="font-bold text-lg w-full border-b-2">
    <%= link_to test.title, admin_test_path(test), class: "hover:text-blue-600 transition duration-300" %>
  </h3>
  <div class="flex flex-row gap-1 items-center justify-between w-full">
    <div class="flex flex-col items-center">
      <p class="font-bold"><%= t('admin.tests.index.category') %></p>
      <p><%= test.category.title %></p>
    </div>
    <div class="flex flex-col items-center">
      <p class="font-bold"><%= t('admin.tests.index.level') %></p>
      <p><%= test_level(test.level) %></p>
    </div>
  </div>
  <div class="flex flex-col">
    <p class="font-semibold"><%= t('admin.tests.index.actions') %></p>
    <%= link_to t('admin.tests.index.create_question_link'), new_test_question_path(test), class: "underline" %>
    <%= link_to t('admin.tests.index.edit_question_link'), edit_admin_test_path(test), class: "underline" %>
    <%= button_to t('admin.tests.index.delete_test_link'), 
              admin_test_path(test), 
              method: :delete, 
              class: "underline font-xs text-light text-red-600", 
              form: { data: { turbo_confirm: 'Are you sure you want to delete this test?' } } %>
  </div>
    <div class="flex flex-col border-t-2 border-gray-800 mt-2 w-full py-2">
    <%= button_to t('admin.tests.index.start_test_button'), start_test_path(test) , class: "p-2 my-1 rounded-xl bg-yellow-600 border-gray-700"%>
  </div>
</div>
