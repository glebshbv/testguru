<%= form_with(model: [:admin, @test], local: true, class: "p-6 bg-white rounded-lg shadow") do |form| %>
  <%= render 'shared/error', object: @test %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full rounded-xl border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= form.label :level, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :level, in: 0..5, class: "w-full rounded-xl border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: "Select a category" }, { class: "w-full rounded-xl border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } %>
  </div>

  <div class="flex items-center justify-start">
    <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition duration-300" %>
  </div>
<% end %>
